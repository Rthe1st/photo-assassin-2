{
  // https://typestrong.org/ts-node/docs/module-type-overrides/
  "ts-node": {
    "transpileOnly": true,
    "moduleTypes": {
      "jest.config.ts": "cjs",
      "./**/jest.config.ts": "cjs",
      "webpack.config.ts": "cjs"
    }
  },
  "compilerOptions": {
    "module": "es2020",
    // based on  https://github.com/tsconfig/bases/blob/main/bases/node14.json#L8
    "target": "es2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noEmitOnError": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "sourceMap": true
  }
}
